<%= form_for @picture, method: :post, :authenticity_token => true, html: { multipart: true }, remote: true do |f| %>

	        <label for="inputFileBefore", class="glyphicon glyphicon-plus", id= "beforeinput" %></label>
	        <%= f.file_field :attachment, style:"display: none", id:"inputFileBefore" %>
	        <%= f.hidden_field :bora, value: "before" %>
	        <br>
	        <span class="filename-before"></span>
	        <br><br>
	        <%= f.submit "Upload", class:"btn btn-info" %>
	        </span>
<% end %>