
<% if @user.after? %>
	<div class="after-upload thumbnail-profile dark-background pic-left">
<% else %>
<div class="after-upload thumbnail row-centered">
<% end %> 

	<% if @user.after? %>
		<div class="image dark-background">
		<div class="delete-pic">
			
			<% if params[:username] == current_user.username %>
				<%= form_for @picture, url: delete_after_pic_path, method: :delete, :authenticity_token => true, html: { multipart: true }, remote: true do |f| %>
					<%= button_tag(type: "submit", class: "btn transparent", name: "commit", value: "conceal") do %>
	 			    <span class="glyphicon glyphicon-remove-circle red" style="cursor:pointer" aria-hidden="true"></span>
					<% end %> 
				<% end %>
			<% end %>
		</div>

		<%= image_tag Picture.where(id: @user.after).first.attachment.url(:index) %>

		</div>
	<% else %>
		<% if params[:username] == current_user.username %>
			<%= form_for @picture, url: after_picture_path, method: :post, :authenticity_token => true, html: { multipart: true }, remote: true do |f| %>
		    <label for="inputFileAfter" class="glyphicon glyphicon-plus" style="cursor:pointer" id="afterinput" %></label>
		    <%= f.file_field :attachment, style:"display: none", id:"inputFileAfter" %>
		    <%= f.hidden_field 'bora', value: "after" %>
		    <br>
		    <span class="filename-after"></span>
		    <br><br>
		    <%= submit_tag "Upload", class:"btn btn-info", data: { disable_with: "Please wait..." } %>
		    </span>
	    <% end %>
			<%= link_to image_tag("zyzz.jpg"), root_path %>
		<% else %>

			<span class="glyphicon glyphicon-question-sign" aria-hidden="true"></span>

		<% end %>

	<% end %>
</div>
