<div class="container">


<div class="row-centered">

<%= link_to current_user do %>
	<div class="col-md-2 container nopadding">
		<hr>


		<% if current_user.before && current_user.after %>
			<div class="col-md-6 container vertical-center dark-background nopadding">
		<% else %>
			<div class="col-md-6 container vertical-center gray-background nopadding">
		<% end %> 

		<% if current_user.before %>
		<%= image_tag Picture.where(id: current_user.before).first.attachment.url(:edit) %>
		<% else %>
			<div class="col-md-2 col-md-offset-3">
						<span class="glyphicon glyphicon-question-sign"></span>
					</div>
		<% end %>
		</div>


		<% if current_user.before && current_user.after %>
			<div class="col-md-6 container vertical-center dark-background nopadding">
		<% else %>
			<div class="col-md-6 container vertical-center gray-background nopadding">
		<% end %> 

		<% if current_user.after %>
		<%= image_tag Picture.where(id: current_user.after).first.attachment.url(:edit) %>
		<% else %>
			<div class="col-md-2 col-md-offset-3">
						<span class="glyphicon glyphicon-question-sign"></span>
					</div>
		<% end %>
		</div>


		<div class="col-md-12 nopadding">
		<br>
		<p><%= current_user.username %></p>
		<hr>
		</div>

	</div>

<% end %>

</div>



<div class="col-md-10">
	<div class="activity-feed">
		<%= render partial: "feed" %>
	</div>
</div>

<div class="col-md-10 col-md-offset-6">
<% if @activities %>
	<div id="infinite-scrolling-activity-feed">
  	<%= will_paginate @activities %>
	</div>
	<% end %>
</div>


</div>
















