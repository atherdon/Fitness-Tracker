<div class="row row-centered">
	
	<div class="before-stats col-md-4 col-md-offset-2">
		<% if @user.stats_before %>
			<% if current_user %>
				<span class="glyphicon glyphicon glyphicon-edit"></span>
			<% end %>

			<% @user.stats_before.each do |key,val| %>
				<%= key %>: <%= val %><br>
			<% end %>
		<% else %>
			<% if current_user %>
				<div class="well">
					<span class="glyphicon glyphicon-plus"></span>
					<h2>Add stats</h2>
				</div>
			<% end %>
		<% end %>
	</div>

	<div class="col-md-4 ">
		<% if @user.stats_after %>
			<% if current_user %>
				<span class="glyphicon glyphicon glyphicon-edit" ></span>
			<% end %>

			<% @user.stats_after.each do |key,val| %>
				<%= key %>: <%= val %><br>
			<% end %>
		<% else %>
			<% if current_user %>
				<div class="well">
					<span class="glyphicon glyphicon-plus"></span>
					<h2>Add stats</h2>
				</div>
			<% end %>
		<% end %>
	</div>

</div>
