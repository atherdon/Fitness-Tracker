<div class="container-fluid">
	<div class="row row-centered">
	<div class="col-md-8 col-md-offset-1">
		<div class="">

			<% if current_user %>
			<div class="thumbnail">
				
				<div class="before-upload">

					<% if @user.before? %>
						<%= image_tag Picture.where(id: current_user.before).url(:index) %>
					<% else %>

					<%= form_for @picture, url: pictures_path, method: :post, :authenticity_token => true, html: { multipart: true }, remote: true do |f| %>

	        <label for="inputFileBefore", class="glyphicon glyphicon-plus", id= "beforeinput" %></label>
	        <%= f.file_field :attachment, style:"display: none", id:"inputFileBefore" %>
	        <%= f.hidden_field 'bora', value: "before" %>
	        <br>
	        <span class="filename-before"></span>
	        <br><br>
	        <%= f.submit "Upload", class:"btn btn-info" %>
	        </span>
	        <% end %>
     			<%= link_to image_tag("zyzz.jpg"), root_path %>

     			<% end %>

       	</div>
        
        


			</div>
			<div class="thumbnail">

				<div class="after-upload">
					<%= form_tag pictures_path, html: { multipart: true} do %>

	        <label for="inputFileAfter", class="glyphicon glyphicon-plus", id="afterinput" %></label>
	        <%= file_field_tag :attachment, style:"display: none", type:"file", id:"inputFileAfter" %>
	        <br>
	        <span class="filename-after"></span>
	        <br><br>
	        <%= submit_tag "Upload", class:"btn btn-info" %>
	        </span>
	        <% end %>
        </div>

				<%= link_to image_tag("zyzz.jpg"), root_path %>
			</div>

			<% else  %>
				<% if @user.before.present? %>
					<div class="thumbnail">
						<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
					</div>
					<div class="thumbnail">
						<span class="glyphicon glyphicon-question-sign" aria-hidden="true"></span>
					</div>
				<% elsif @user.after.present? %>
					<div class="thumbnail">
						<span class="glyphicon glyphicon-question-sign" aria-hidden="true"></span>
					</div>
					<div class="thumbnail">
						<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
					</div>					
				<% else %>
					<div class="thumbnail">
						<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
					</div>
					<div class="thumbnail">
						<span class="glyphicon glyphicon-question-sign" aria-hidden="true"></span>
					</div>
				<% end %>
			<% end %>

		</div>
		</div>
	</div>
</div>


<script type="text/javascript">

     $(".before-upload input:file").change( function (){
     	 
       var fileName = $(this).val().replace(/.*(\/|\\)/, '');
       $(".filename-before").html(fileName);
       $("#beforeinput").attr('class', 'glyphicon glyphicon-ok');
       
     });

     $(".after-upload input:file").change( function (){
     	 
       var fileName = $(this).val().replace(/.*(\/|\\)/, '');
       $(".filename-after").html(fileName);
       $("#afterinput").attr('class', 'glyphicon glyphicon-ok');
       
     });

</script>














