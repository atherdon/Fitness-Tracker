<div class="after-upload">

	<% if @user.after? %>
		<div class="image dark-background">
		<div class="delete-pic">
			
			<%= form_for @picture, url: delete_after_pic_path, method: :delete, :authenticity_token => true, html: { multipart: true }, remote: true do |f| %>
				<%= button_tag(type: "submit", class: "btn dark-background", name: "commit", value: "conceal") do %>
 			    <span class="glyphicon glyphicon-remove-circle red" aria-hidden="true"></span>
				<% end %> 
			<% end %>

		</div>
		<%= image_tag Picture.where(id: current_user.after).first.attachment.url %>
		</div>
	<% else %>
		<%= form_for @picture, url: after_picture_path, method: :post, :authenticity_token => true, html: { multipart: true }, remote: true do |f| %>

    <label for="inputFileAfter", class="glyphicon glyphicon-plus", id="afterinput" %></label>
    <%= f.file_field :attachment, style:"display: none", id:"inputFileAfter" %>
    <%= f.hidden_field 'bora', value: "after" %>
    <br>
    <span class="filename-after"></span>
    <br><br>
    <%= submit_tag "Upload", class:"btn btn-info" %>
    </span>
    <% end %>
		<%= link_to image_tag("zyzz.jpg"), root_path %>

	<% end %>
</div>